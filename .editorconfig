root = true

# Configuración por defecto para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Archivos Java
[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

# Archivos XML (POM, configuraciones)
[*.xml]
indent_style = space
indent_size = 2

# Archivos YAML (Docker Compose, configuraciones)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Archivos JSON
[*.json]
indent_style = space
indent_size = 2

# Archivos Properties
[*.properties]
indent_style = space
indent_size = 2

# Archivos SQL
[*.sql]
indent_style = space
indent_size = 2

# Archivos Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Scripts de shell
[*.{sh,bat,cmd}]
indent_style = space
indent_size = 2

# Archivos de configuración específicos
[{pom.xml,application*.properties,application*.yml,docker-compose*.yml}]
indent_style = space
indent_size = 2

# Archivos Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2
